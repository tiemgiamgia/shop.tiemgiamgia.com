---
const { product } = Astro.props;

const price = Number(product.price || 0)
  .toLocaleString("vi-VN") + "₫";
---

<a href={product.url} class="card">

  <div class="thumb">
    <img 
      src={product.image} 
      alt={product.title}
      loading="lazy"
    >
  </div>

  <div class="info">
    <div class="title">{product.title}</div>

    <div class="price">{price}</div>

    {product.discount > 0 && (
      <div class="discount">
        Giảm {product.discount}%
      </div>
    )}
  </div>

</a>
